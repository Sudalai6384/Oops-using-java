import java.io.*;
import java.util.Scanner;
class PattZ{
public static void main(String args[]){
int n,i,j;
Scanner s= new Scanner(System.in);
System.out.println("Enter the n value:");
n=s.nextInt();
System.out.printf("\n");

for(i=0;i<n;i++)
{
	for(j=0;j<=n;j++)
	{
if(i==0 || i==n-1){
System.out.print("@ ");}

else if((j==n-1||j==n)&&i==(n-4)){
System.out.print("# ");
}

else if((j==n-3||j==n-2)&&i==(n-3)){
System.out.print("# ");
}

else if((j==n-3||j==n-n)&&i==(n-2)){
System.out.print("# ");
}

else{
System.out.print("  ");}

}
System.out.println();
}
}}