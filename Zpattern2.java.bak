import java.io.*;
import java.util.Scanner;
class Zpattern2{
public static void main(String args[]){
int n,i,j;
Scanner s= new Scanner(System.in);
System.out.println("Enter the n value:");
n=s.nextInt();

for(i=0;i<n;i++)
{
	for(j=0;j<=n;j++)
	{
if(i==0 || i==n-1){
System.out.print("@ ");}
System.out.println();
else if(i==n-(n-1)&&(j==n-1||j==n)){
System.out.print("# ");}
System.out.println();

else if(i==n-(n-2)&&(j==n-3||j==n-2)){
System.out.print("# ");}
System.out.println();

else if(i==n-(n-3)&&(j==n-1||j==n-n)){
System.out.print("# ");}
System.out.println();

else{
System.out.print("  ");}
}}
}}
